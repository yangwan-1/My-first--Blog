<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.athut.mapper.TagMapper">
   <insert id="addTag" parameterType="com.athut.pojo.Tag">
       insert into t_tag values (#{id},#{name});
   </insert>

    <select id="listTag" resultType="com.athut.pojo.Tag">
        select * from t_tag
    </select>

    <select id="getTagByName" resultType="com.athut.pojo.Tag">
        select * from t_tag where name = #{name}
    </select>

    <delete id="deleteTag">
        delete from t_tag where id = #{id}
    </delete>

    <update id="updateTag">
        update t_tag set name = #{name} where id = #{id}
    </update>

    <select id="getTagById" resultType="com.athut.pojo.Tag">
        select * from t_tag where id = #{id}
    </select>

    <select id="listTagLimit" resultType="com.athut.pojo.Tag">
        select * from t_tag limit 5
    </select>
</mapper>