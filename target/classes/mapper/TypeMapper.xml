<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.athut.mapper.TypeMapper">
    <resultMap id="Type" type="com.athut.pojo.Type">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="com.athut.pojo.Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
            <result property="typeId" column="type_id"/>
        </collection>
    </resultMap>
   <insert id="addType" parameterType="com.athut.pojo.Type">
       insert into t_type values (#{id},#{name});
   </insert>

    <select id="listType" resultType="com.athut.pojo.Type">
        select * from t_type
    </select>

    <select id="getTypeByName" resultType="com.athut.pojo.Type">
        select * from t_type where name = #{name}
    </select>

    <delete id="deleteType">
        delete from t_type where id = #{id}
    </delete>

    <update id="updateType">
        update t_type set name = #{name} where id = #{id}
    </update>

    <select id="getTypeById" resultType="com.athut.pojo.Type">
        select * from t_type where id = #{id}
    </select>

    <select id="listTypeLimit" resultType="com.athut.pojo.Type">
    select * from t_type limit 5
    </select>
    <select id="listTypeWithBlog" resultMap="Type">
        select t.id tid,t.name,b.id bid,b.title, b.type_id from t_type t,t_blog b where t.id = b.type_id
    </select>
</mapper>